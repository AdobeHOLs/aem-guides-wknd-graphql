# For usage with Create React App, env variables needs to be prefixed with `REACT_APP_`

# AEM Author URL (Server namespace)
REACT_APP_HOST_URI=https://author-p46903-e1338442.adobeaemcloud.com

# Dev modes, use proxy during development (helps avoids potential CORS issues)
REACT_APP_USE_PROXY=true

# If required, you can change default PORT number needed to run this react app locally
PORT=3000

#AUTH (Choose one method)
# Authentication methods: 'service-token', 'dev-token', 'basic' or leave blank to use no authentication
REACT_APP_AUTH_METHOD=basic

# For Bearer auth, use DEV token (dev-token) from Cloud console
REACT_APP_DEV_TOKEN=dev-token

# For Service toke auth, provide path to service token file (download file from Cloud console)
REACT_APP_SERVICE_TOKEN=auth/service-token.json

# For Basic auth, use AEM ['user','pass'] pair (eg for Local AEM Author instance)
REACT_APP_BASIC_AUTH_USER=reactuser
REACT_APP_BASIC_AUTH_PASS=reactuser
